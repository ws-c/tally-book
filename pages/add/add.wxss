/* pages/add/add.wxss */
page{
	background-color: #F7F8FA;
}
.img-list{
	background-color: rgb(255, 255, 255);
	height: 120rpx;
	display: flex;
	justify-content: space-evenly;
	align-items: center;
	margin: 30rpx 0;
}
.img-box{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 120rpx;
	width: 120rpx;
}
.img-list image{
	height: 60rpx;
	width: 60rpx;
}
.img-list text{
	font-size: 20rpx;
}
van-field image{
	width: 50rpx;
	height: 50rpx;
	margin-right: 20rpx;
}
.datetime{
	margin: 30rpx 0;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}
.datetime image{
	width: 70rpx;
	height: 70rpx;
}
