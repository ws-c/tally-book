/* pages/statistics/statistics.wxss */
.my-chart{
	width: 100%;
	height: 500rpx;
}
ec-canvas{
	width: 100%;
	height: 100%;
}
.wrap{
	display: flex;
	justify-content: space-evenly;
	padding: 25rpx;
	border-bottom: 1rpx solid #cccccc;
	margin-bottom: 30rpx;
}
.btn{
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 45rpx;
	height: 60rpx;
	width: 120rpx;
	padding-bottom: 10rpx;
}
.on{
	color: lightseagreen;
	border-bottom: 1rpx solid lightseagreen;
}
.sum-box{
	display: flex;
	flex-direction: column;
	justify-content: center;
	height: 250rpx;
	background-color: #FFCA28;
	border-bottom: 1rpx solid rgba(255,202,40, 0.5);
	padding-left: 30rpx;
}
.num{
	margin-top: 10rpx;
	height: 40rpx;
	font-size: 60rpx;
	color: white;
	font-weight: 800;
}
.icon{
	margin-left: 30rpx;
	font-size: 35rpx;
}
.i{
	position: relative;
	top: 5rpx;
	height: 35rpx;
	width: 35rpx;
}
.length{
	background-color: #d1d1d1;
	color: #2F4858;
	width: 200rpx;
	margin-right: 30rpx;
}